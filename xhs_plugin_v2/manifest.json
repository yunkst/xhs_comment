{
  "manifest_version": 3,
  "name": "小红书网络请求监控插件",
  "version": "1.0.0",
  "description": "监控和记录所有发往xiaohongshu.com的网络请求",
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "小红书请求监控",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js", 
        "enhanced_interceptor.js",
        "injected/index.js",
        "injected/fetch.js",
        "injected/xhr.js",
        "injected/observer.js",
        "injected/utils.js"
    ],
      "matches": ["<all_urls>"]
    }
  ]
} 